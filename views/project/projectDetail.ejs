<link href="/style/projects/projectDetails.css" rel="stylesheet" type="text/css">
<link href="/style/buttons/mainButtons.css" rel="stylesheet" type="text/css">

<div class="dashboard-container">

  <!-- Back to Project List -->
  <button id="back-to-list" class="menu-button">Back to list</button>

  <!-- Project Header -->
  <div class="project-section">
    <div class="project-header">
      <!-- Project Info -->
      <div class="project-info-container">
        <div class="project-info">
          <h1 id="project-name">Project name</h1>
          <p id="project-des" class="project-description">Lorem ipsum dolor...</p>
        </div>
      </div>

      <!-- Project Stats -->
      <div class="project-stats-container">
        <div class="project-stats">
          <span id="incomplete-ticket">10</span> / <span id="total-ticket">20</span> Total bugs
        </div>
      </div>

      <!-- Modal Button Container -->
      <div class="modal-button-container">
        <div class="modal-button">
          <%- include('../partials/modals/editProject') %>
        </div>
      </div>
    </div>
  </div>

  <!-- Personnel Section -->
  <div class="sections-container">

    <!-- Personnel Section -->
    <div class="personnel-section">

      <h2 class="section-title">Assigned Personnel</h2>
      <div class="modal-button">
        <%- include('../partials/modals/addDevelopertoProject') %>
      </div>

      <div class="personnel-section-body">
        <!-- Managers -->
        <div class="manager-list">
          <h3 class="sub-section-title">Managers</h3>
          <div class="personnel-list">
            <!-- Manager cards here -->
            <!-- Example of a manager card -->
            <div class="personnel-card manager-card">
              <div class="profile-image">
                <img src="manager-profile.jpg" alt="Manager Name">
              </div>
              <div class="personnel-info">
                <div class="name">Alice Smith</div>
                <div class="developer-type">Manager</div>
              </div>
            </div>
            <!-- More manager cards... -->
          </div>
        </div>

        <!-- Developers -->
        <div class="developer-list">
          <h3 class="sub-section-title">Developers</h3>
          <div class="personnel-list">
            <!-- Developer cards here -->
            <!-- Example of a developer card -->
            <div class="personnel-card developer-card">
              <div class="profile-image">
                <img src="developer-profile.jpg" alt="Developer Name">
              </div>
              <div class="personnel-info">
                <div class="name">Bob Johnson</div>
                <div class="developer-type">Front End</div>
              </div>
            </div>
            <!-- More developer cards... -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bug Section -->
  <div class="bugs-section">
    <h2 class="section-title">Bugs</h2>
    <div class="modal-button">
      <%- include('../partials/modals/addBug') %>
    </div>
    <div class="bugs-cards">
      <!-- Bug cards here -->
      <!-- Example of a bug card -->
      <div class="bug-card">
        <h3 class="bug-name">Bug Name</h3>
        <p class="bug-description">This is a brief description of the bug...</p>
        <p class="bug-severity-priority">Severity <span class="severity-1">1</span> - Priority <span class="priority-1">1</span></p>
        <div class="bug-assigned-status">
          <span class="assigned-personnel">John Doe</span>
          <span class="bug-status">Open</span>
          <span class="bug-deadline">Deadline: 2024-01-10</span>
        </div>
      </div>
    </div>
  </div>

</div>

