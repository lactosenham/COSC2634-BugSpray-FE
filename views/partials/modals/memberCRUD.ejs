<div>
    <button data-modal-target="developerProject-modal<%= title %>"
        data-modal-toggle="developerProject-modal<%= title %>"
        class="px-4 py-2 text-xs font-bold text-white rounded bg-palette-3 hover:bg-sky-400" type="button">
        <%= title %>
    </button>

    <div>
        <!-- Modal Content -->
        <div id="developerProject-modal<%= title %>" tabindex="-1" aria-hidden="true" data-modal-backdrop="static"
            class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative w-full max-w-md max-h-full p-4">
                <div class="relative bg-white rounded-lg shadow">

                    <!-- Modal Header -->
                    <div class="flex items-center justify-between p-4 border-b rounded-t md:p-5">
                        <h3 class="text-lg font-semibold text-gray-900">
                            <%= title %>
                        </h3>

                        <!-- Close Button -->
                        <button type="button"
                            class="inline-flex items-center justify-center w-8 h-8 text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 ms-auto"
                            data-modal-toggle="developerProject-modal<%= title %>">
                            <i class="fa-solid fa-x"></i>
                            <span class="sr-only">Close modal</span>
                        </button>
                    </div>

                    <!-- Modal Body -->
                    <form id=<%= form %> class="p-4 md:p-5">
                        <!-- Loading -->
                        <div id="loading" class="items-center justify-center hidden h-full text-xl text-gray-500 ">
                            <i class="fa-solid fa-spinner fa-spin"></i>
                            <span class="ml-2">Loading developers...</span>
                        </div>

                        <div id=<%= content %> class="hidden">
                            <div id=<%= list %> class="grid grid-cols-1 gap-4 mb-4 md:grid-cols-2">
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <button id="<%= submit %>" type="submit"
                            class="text-white inline-flex items-center <%= color %> focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                            <i class="mr-3 <%= icon %>"></i>
                            <%= submit %>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>