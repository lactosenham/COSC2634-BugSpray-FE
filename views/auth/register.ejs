<link href="/style/authentication/register.css" rel="stylesheet" type="text/css">
<link href="/style/buttons/mainButtons.css" rel="stylesheet" type="text/css">
<link href="/style/popup.css" rel="stylesheet" type="text/css">

<section class="registration-section">
    <!-- App's Logo -->
    <a href="#" class="logo-link">
        <img class="logo" src="img/BugSpray - Dark.png" alt="logo">
    </a>

    <!-- Content Section -->
    <div class="registration-content">
        <!-- Slogan Section -->
        <section class="slogan">
            <h1 class="slogan-title">Unleash the power of seamless collaboration</h1>
            <p class="slogan-description">Where every bug finds its fix seamlessly</p>
        </section>

        <!-- Registration Form Section -->
        <div class="registration-form-container">
            <h1 class="form-title">Register for an account</h1>
            <h2 class="login-prompt">
                Already have an account? <a href="/login" class="login-link">Log in</a>
            </h2>

            <!-- Registration Form -->
            <form id="registerForm" class="registration-form">
                <!-- Username Field -->
                <div class="form-field">
                    <label for="username" class="field-label">Username</label>
                    <input 
                        type="text" 
                        name="username" 
                        id="username"
                        class="input-field"
                        placeholder="userName123" 
                        pattern="[a-zA-Z0-9]{8,15}" 
                        required>
                    <p class="field-instruction">Must be 8 to 15 characters</p>
                </div>

                <!-- Password Field -->
                <div class="form-field">
                    <label for="password" class="field-label">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password"
                        class="input-field"
                        required 
                        placeholder="••••••••"
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[a-zA-Z\d!@#$%^&*]{8,20}$">
                    <div class="field-instruction">
                        <ul>
                            <li>At least one upper case letter</li>
                            <li>At least one lower case letter</li>
                            <li>At least one digit</li>
                            <li>At least one special character (!@#$%^&*)</li>
                            <li>Must be 8 to 20 characters</li>
                        </ul>
                    </div>
                </div>

                <!-- Name Field -->
                <div class="form-field">
                    <label for="name" class="field-label">Your Name</label>
                    <input 
                        type="text"
                        id="name" 
                        name="name" 
                        class="input-field"
                        placeholder="John Doe" 
                        minlength="5">
                    <p class="field-instruction">Must be at least 5 characters</p>
                </div>

                <!-- Role Selector -->
                <div class="form-field">
                    <label for="role" class="field-label">Role</label>
                    <select 
                        id="role" 
                        name="role" 
                        class="select-field"
                        required>
                        <option value="" disabled selected>Choose your role</option>
                        <option value="Manager">Manager</option>
                        <option value="Developer">Developer</option>
                    </select>
                </div>

                <!-- Developer Type Selector -->
                <div class="form-field developer-info">
                    <label for="developerType" class="field-label">Developer Type</label>
                    <select 
                        id="developerType" 
                        name="developerType" 
                        class="select-field"
                        required>
                        <option value="" disabled selected>Choose your Developer Role</option>
                        <option value="Front-end">Front-end Developer</option>
                        <option value="Back-end">Back-end Developer</option>
                        <option value="Full-stack">Full-stack Developer</option>
                        <option value="DevOps">DevOps Engineer</option>
                        <option value="Cloud">Cloud Architect</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="menu-button">Signup</button>
            </form>
        </div>

        <!-- Popup (if needed) -->
        <div id="myPopup" class="popup">
            <%- include('../partials/popup'); %>
        </div>
    </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<% if(scripts) { %>
    <% scripts.forEach(function(script) { %>
        <script src="<%= script %>"></script>
    <% }); %>
<% } %>
