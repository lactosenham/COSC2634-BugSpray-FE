<link href="/style/popup.css" rel="stylesheet" type="text/css">
<section class="bg-palette-4 pb-10">
    <!-- App Logo -->
    <a href="#" class="flex justify-center my-6">
        <img class="w-40 mr-2" src="img/BugSpray - Dark.png" alt="logo">
    </a>

    <!-- Slogan -->
    <div class="grid grid-cols-1 md:grid-cols-2 md:gap-5 px-6 py-8">
        <section class="flex items-center">
            <div class="flex flex-col">
                <h1
                    class="mb-4 text-center lg:text-left text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">
                    Transform your development experience</h1>
                <p class="mb-8 text-center lg:text-left text-lg font-normal text-gray-400 lg:text-xl">
                    Where bugs meet their
                    match, and teamwork takes the lead!</p>
            </div>
        </section>

        <!-- Login Form Title -->
        <div class="w-auto bg-palette-3 rounded-lg shadow-2xl">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-white md:text-2xl text-center">
                    Log in to your account
                </h1>

                <!-- Login Form -->
                <form id= "loginForm" class="space-y-4 md:space-y-6">

                    <!-- Username Field -->
                    <div>
                        <input type="text" 
                                name="username" 
                                id="username"
                                class="sm:text-sm rounded-lg block w-full p-2.5 bg-palette-2 placeholder-white text-white"
                                placeholder="Username" 
                        required>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <input type="password" 
                                name="password" 
                                id="password" 
                                placeholder="Password"
                                class="sm:text-sm rounded-lg block w-full p-2.5 bg-palette-2 placeholder-white text-white"
                        required>
                    </div>

                    <!-- Submit Button -->
                    <button type=" submit"
                        class="w-full text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-palette-2">Log
                        in</button>
                    <div>
                        <p class="text-sm font-light text-white">
                            Ready to start boosting productivity?
                        </p>

                        <!-- Registration Link -->
                        <a href="./register" class="font-medium text-yellow-100 hover:underline">
                            Sign
                            up
                            for an
                            account
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div id="myPopup" class="popup">
            <%- include('../partials/popup'); %>
        </div>
    </div>

</section>




