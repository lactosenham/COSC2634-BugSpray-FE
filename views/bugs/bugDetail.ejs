<div class="flex justify-center pt-5 pb-10 mt-5">
  <div class="w-5/6 h-full py-10 border-2 border-[#082f49] rounded-lg">
    <div class="flex justify-between">
      <div class="flex gap-2">
        <i class="mt-4 ml-5 fa-solid fa-bug fa-xl"></i>
        <h1 class="text-xl pt-[1px] font-light" id="name">Bug Name</h1>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 pt-3">
      <div class="ml-5">
        <!-- Description Section -->
        <h1 class="text-xl font-semibold">Description</h1>
        <div class="px-4 mt-3 border-2 rounded-lg border-slate-300">
          <div id="text" class="px-2 py-5 overflow-x-auto overscroll-auto h-96">
            <!-- Bug Description Here -->
          </div>
        </div>

        <!-- Steps to Reproduce Section -->
        <h1 class="text-xl font-semibold mt-4">Steps to Reproduce</h1>
        <div class="px-4 mt-3 border-2 rounded-lg border-slate-300">
          <div id="steps" class="px-2 py-5 overflow-x-auto overscroll-auto h-48">
            <!-- Steps to Reproduce Here -->
          </div>
        </div>
      </div>

      <div class="mr-7">
        <!-- Status Dropdown -->
        <div class="pb-4">
          <select id="status" class="px-4 py-2 rounded-lg">
            <option id="openStatus" value="Open">Open</option>
            <option id="todoStatus" value="To-do">To-do</option>
            <option id="inProgressStatus" value="In Progress">In Progress</option>
            <option id="resolvedStatus" value="Resolved">Resolved</option>
            <option id="inReivewStatus" value="In-Review">In-Review</option>
            <option id="closedStatus" value="Closed">Closed</option>
          </select>
        </div>
        
        <!-- Save status button -->
        <button id="saveStatus" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Save Status
        </button>

        <!-- Details Section -->
        <div class="px-4 mt-2 border-2 rounded-lg border-slate-300">
          <h1 class="pt-5 text-xl font-semibold">Details</h1>
          <div class="pt-3 pb-5">
            <div class="flex pb-5">
              <h1 class="w-1/2">Current Status</h1>
              <h1 id="status-level" class="w-1/2">Status Level</h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2">Reporter</h1>
              <a href="" id="reporter-name">Name</a>
            </div>

            <!-- Trigger Button for Popup -->
            <div class="flex pb-5">
              <h1 class="w-1/2">Assignee</h1>
              <a href="" id="assignee-name">Name</a>
              <button id="assignDeveloperButton" class="ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                  Assign Developer
              </button>
            </div>

              <!-- Popup Modal Content -->
              <div id="assignDeveloperModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
                <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                    <div class="mt-3 text-center">
                        <span id="hideModal" class="float-right cursor-pointer text-xl font-bold">&times;</span>
                        <h3 id="modalTitle" class="text-lg leading-6 font-medium text-gray-900">Assign Developer</h3>
                        <div class="mt-2 px-7 py-3">
                            <p id="modalBody" class="text-sm text-gray-500">Developers List:</p>
                            <div id="developerList" class="text-lg text-center">
                                <!-- Developer list will be populated here -->
                            </div>
                        </div>
                        <div class="items-center px-4 py-3">
                            <button id="confirmAssign" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300">
                                Assign
                            </button>
                        </div>
                    </div>
                </div>
              </div>

            <div class="flex pb-5">
              <h1 class="w-1/2">Priority</h1>
              <h1 id="priority">Priority Level</h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2">Severity</h1>
              <h1 id="severity">Severity Level</h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2">Deadline</h1>
              <h1 id="deadline">Deadline Date</h1>
            </div>
            <div class="flex">
              <h1 class="w-1/2">Date reported</h1>
              <h1 id="date">Date</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
