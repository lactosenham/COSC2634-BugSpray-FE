<div class="flex justify-center pt-5 pb-10 mt-5">
  <div class="w-5/6 h-full py-10 border-2 border-[#082f49] rounded-lg">
    <div class="flex flex-col justify-between gap-5 md:flex-row">
      <div class="flex items-center justify-center gap-2 md:justify-start md:ml-7">
        <i class="items-center fa-solid fa-bug fa-xl"></i>
        <h1 class="text-xl pt-[1px] font-light" id="name">Bug Name</h1>
      </div>
      <div class="grid grid-cols-3 gap-2 md:grid-cols-2 md:mr-[20px]">
        <select id="status" class="col-span-1 col-start-2 px-4 py-2 rounded-lg md:col-start-1">
          <option id="openStatus" value="Open">Open</option>
          <option id="todoStatus" value="To-do">To-do</option>
          <option id="inProgressStatus" value="In Progress">In Progress</option>
          <option id="resolvedStatus" value="Resolved">Resolved</option>
          <option id="inReivewStatus" value="In-Review">In-Review</option>
          <option id="closedStatus" value="Closed">Closed</option>
        </select>
        <div class="flex justify-center col-span-1 col-start-2">
          <button id="saveStatus" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700">
            Save Status
          </button>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:pt-5 md:grid-cols-2">
      <div class="p-5 md:ml-5 md:p-0">
        <!-- Description Section -->
        <h1 class="text-xl font-semibold">Description</h1>
        <div class="px-4 mt-3 border-2 rounded-lg border-slate-300">
          <div id="text" class="px-2 py-5 overflow-x-auto overscroll-auto h-96">
            <!-- Bug Description Here -->
          </div>
        </div>

        <!-- Steps to Reproduce Section -->
        <h1 class="mt-4 text-xl font-semibold">Steps to Reproduce</h1>
        <div class="px-4 mt-3 border-2 rounded-lg border-slate-300">
          <div id="steps" class="h-48 px-2 py-5 overflow-x-auto overscroll-auto">
            <!-- Steps to Reproduce Here -->
          </div>
        </div>
      </div>

      <div class="p-5 md:mr-7 md:p-0">
        <!-- Status Dropdown -->


        <!-- Save status button -->


        <!-- Details Section -->
        <div class="flex justify-between">
          <h1 class="text-xl font-semibold">Details</h1>
          <button id="assignDeveloperButton"
            class="px-4 py-2 text-xs font-bold text-white rounded bg-palette-3 hover:bg-sky-400">
            Assign Developer
          </button>
        </div>
        <div class="px-4 mt-2 border-2 rounded-lg border-slate-300">
          <div class="pt-3 pb-5">
            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Current Status</h1>
              <h1 id="status-level" class="w-1/2"></h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Reported By</h1>
              <p id="reporter-name"></p>
            </div>

            <!-- Trigger Button for Popup -->
            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Assigned To</h1>
              <p id="assignee-name"></p>
            </div>

            <!-- Popup Modal Content -->
            <div id="assignDeveloperModal"
              class="fixed inset-0 items-center justify-center hidden w-full h-full overflow-y-auto bg-gray-600 bg-opacity-50">
              <div class="relative mx-auto bg-white border rounded-md shadow-lg top-20 w-96">
                <div class="">
                  <div class="flex justify-between p-5">
                    <h3 id="modalTitle" class="text-lg font-semibold leading-6 text-gray-900">Assign
                      Developer</h3>
                    <span id="hideModal"
                      class="inline-flex items-center justify-center w-8 h-8 text-sm text-gray-400 bg-transparent rounded-lg hover:bg-gray-200 hover:text-gray-900 ms-auto"><i
                        class="fa-solid fa-x"></i></span>
                  </div>
                  <div class="p-5">
                    <p id="modalBody" class="text-sm text-gray-500"></p>
                    <div id="developerList" class="grid grid-cols-1 gap-4 mb-4 md:grid-cols-2">
                      <!-- Developer list will be populated here -->
                    </div>
                    <button id="confirmAssign"
                      class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                      Assign
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Priority</h1>
              <h1 id="priority"></h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Severity</h1>
              <h1 id="severity"></h1>
            </div>
            <div class="flex pb-5">
              <h1 class="w-1/2 font-bold">Deadline</h1>
              <h1 id="deadline"></h1>
            </div>
            <div class="flex">
              <h1 class="w-1/2 font-bold">Date reported</h1>
              <h1 id="date"></h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>