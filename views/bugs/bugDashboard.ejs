<h2 class="my-4 text-3xl font-bold text-center md:text-4xl md:my-8">
    <%= title %>
</h2>
<section class="flex flex-col w-full gap-10 py-10 my-5 content lg:flex-row px-7">
    <aside
        class="left-0 w-full p-5 rounded-lg bg-palette-3 md:max-lg:block lg:block lg:sticky top-10 h-5/6 lg:w-1/4 md:max-lg:center-and-half">
        <h2 class="mb-4 text-xl font-bold text-center text-white">Sort/Filter</h2>

        <form action="" method="get">
            <!-- Sort Priority and Severity -->
            <div class="mb-4">
                <h3 class="mb-2 text-lg font-bold text-gray-200">Sort</h3>
                <div class="grid grid-cols-2 gap-2">
                    <div class="col-span-1">
                        <div class="flex items-center justify-between mb-2">
                            <span class="font-semibold text-white">Category</span>
                        </div>
                        <select name="sortField" id="sortField"
                            class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500">
                            <option value="" selected disabled>Choose category</option>
                            <option value="priority">Priority</option>
                            <option value="severity">Severity</option>
                        </select>
                    </div>
                    <div class="col-span-1">
                        <div class="flex items-center justify-between mb-2">
                            <span class="font-semibold text-white">Order</span>
                        </div>
                        <select name="sortOrder" id="sortOrder"
                            class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500">
                            <option value="" selected disabled>Choose order</option>
                            <option value="asc">Ascending</option>
                            <option value="desc">Descending</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-4">
                <h3 class="mb-2 text-lg font-bold text-gray-200">Filter</h3>
                <div class="">
                    <div class="flex items-center justify-between mb-2">
                        <span class="font-semibold text-white">Status</span>
                    </div>
                    <select name="status" id="status"
                        class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500">
                        <option value="" selected disabled>Choose status</option>
                        <option value="Open">Open</option>
                        <option value="To-do">To-do</option>
                        <option value="Resolved">Resolved</option>
                        <option value="In-Review">In-Review</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>
            </div>
            <!-- Filter Button -->
            <button type="submit"
                class="w-full py-2 mt-4 font-bold text-white transition duration-300 rounded-lg shadow-sm bg-palette-2 hover:brightness-110 hover:scale-105">Apply</button>
        </form>
    </aside>
    <div class="flex flex-col justify-center w-full lg:w-3/4">
        <section
            class="grid items-center grid-cols-1 gap-10 mx-auto mb-5 md:grid-cols-2 lg:grid-cols-3 justify-items-center md:max-w-2xl lg:max-w-full lg:mx-0">
            <div class="flex flex-col justify-between w-auto gap-4 p-6 bg-white rounded-lg shadow-md h-70">
                <div class="flex justify-between w-full gap-2">
                    <div class="flex flex-col gap-5">
                        <h2 class="block w-full text-2xl font-bold text-gray-800 line-clamp-1 text-ellipsis">
                            Backend Not Working
                        </h2>
                        <p><strong>Status:</strong> To-do</p>
                        <p class="line-clamp-3 text-ellipsis"><strong>Description:</strong> Someone pushed some ass code
                            to prod and now the SQL database is down </p>
                    </div>
                    <div class="flex flex-col gap-2">
                        <div class="px-5 py-2 text-sm font-semibold text-white bg-red-500 rounded-full shadow-lg">
                            Priority: 5
                        </div>
                        <div
                            class="inline-flex items-center px-5 py-2 text-sm font-semibold text-white bg-green-500 rounded-full shadow-lg">
                            Severity: 5
                        </div>
                    </div>
                </div>
                <div class="text-blue-500 cursor-pointer hover:text-blue-700"><a href="">Details →</a></div>
            </div>
            <div class="flex flex-col justify-between w-auto gap-4 p-6 bg-white rounded-lg shadow-md h-70">
                <div class="flex justify-between w-full gap-2">
                    <div class="flex flex-col gap-5">
                        <h2 class="block w-full text-2xl font-bold text-gray-800 line-clamp-1 text-ellipsis">
                            Frontend Not Working
                        </h2>
                        <p><strong>Status:</strong> To-do</p>
                        <p class="line-clamp-3 text-ellipsis"><strong>Description:</strong> Someone used Bootstrap in a
                            Tailwind project. Now the CSS is not loading</p>
                    </div>
                    <div class="flex flex-col gap-2">
                        <div class="px-5 py-2 text-sm font-semibold text-white bg-orange-500 rounded-full shadow-lg">
                            Priority: 3
                        </div>
                        <div
                            class="inline-flex items-center px-5 py-2 text-sm font-semibold text-white bg-red-500 rounded-full shadow-lg">
                            Severity: 5
                        </div>
                    </div>
                </div>
                <div class="text-blue-500 cursor-pointer hover:text-blue-700"><a href="">Details →</a></div>
            </div>
            <div class="flex flex-col justify-between w-auto gap-4 p-6 bg-white rounded-lg shadow-md h-70">
                <div class="flex justify-between w-full gap-2">
                    <div class="flex flex-col gap-5">
                        <h2 class="block w-full text-2xl font-bold text-gray-800 line-clamp-1 text-ellipsis">
                            Intergration Not Working
                        </h2>
                        <p><strong>Status:</strong> To-do</p>
                        <p class="line-clamp-3 text-ellipsis"><strong>Description:</strong> Someone used React syntax in
                            an EJS project. Now nothing is working</p>
                    </div>
                    <div class="flex flex-col gap-2">
                        <div class="px-5 py-2 text-sm font-semibold text-white bg-red-500 rounded-full shadow-lg">
                            Priority: 5
                        </div>
                        <div
                            class="inline-flex items-center px-5 py-2 text-sm font-semibold text-white bg-red-500 rounded-full shadow-lg">
                            Severity: 5
                        </div>
                    </div>
                </div>
                <div class="text-blue-500 cursor-pointer hover:text-blue-700"><a href="">Details →</a></div>
            </div>
        </section>
    </div>
</section>