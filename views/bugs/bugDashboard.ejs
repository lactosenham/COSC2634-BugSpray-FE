<link href="/style/bugs/bugDashboard.css" rel="stylesheet" type="text/css">

<h2 class="main-title">
    <%= title %>
</h2>

<section class="main-section">
    <aside class="side-panel">
        <h2 class="panel-title">Sort/Filter</h2>

        <form action="" method="get">
            <div class="sort-section">
                <h3 class="section-heading">Sort</h3>
                <div class="sort-grid">
                    <div class="sort-category">
                        <label class="category-label">Category</label>
                        <select name="sortField" id="sortField" class="select-input">
                            <option value="" selected disabled>Choose category</option>
                            <option value="priority">Priority</option>
                            <option value="severity">Severity</option>
                        </select>
                    </div>
                    <div class="sort-order">
                        <label class="order-label">Order</label>
                        <select name="sortOrder" id="sortOrder" class="select-input">
                            <option value="" selected disabled>Choose order</option>
                            <option value="asc">Ascending</option>
                            <option value="desc">Descending</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="filter-section">
                <h3 class="section-heading">Filter</h3>
                <div class="status-selector">
                    <label class="status-label">Status</label>
                    <select name="status" id="status" class="select-input">
                        <option value="" selected disabled>Choose status</option>
                        <option value="Open">Open</option>
                        <option value="To-do">To-do</option>
                        <option value="Resolved">Resolved</option>
                        <option value="In-Review">In-Review</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="apply-button">Apply</button>
        </form>
    </aside>

    <div class="content-area">
        <section class="bug-grid">

            <!-- Repeat this block for each issue -->
            <div class="bug-block">
                <div class="bug-content">
                    <div class="bug-info">
                        <h2 class="bug-title">
                            Backend Not Working
                        </h2>
                        <p class="status">Status: To-do</p>
                        <p class="description">Description: Someone pushed some bad code to prod and now the SQL database is down</p>
                    </div>
                    <div class="bug-metrics">
                        <div class="priority">Priority: 5</div>
                        <div class="severity">Severity: 5</div>
                    </div>
                </div>
                <a href="" class="details-link">Details â†’</a>
            </div>
            <!-- Repeat for other issues -->

        </section>
    </div>
</section>
